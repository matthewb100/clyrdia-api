# FastAPI Configuration
APP_NAME=Clyrdia Contract Intelligence API
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security
SECRET_KEY=your-super-secret-key-here-change-in-production
API_KEY_HEADER=X-API-Key
API_KEY=your-api-key-here

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Supabase Configuration
SUPABASE_URL=your-supabase-url-here
SUPABASE_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=redis://redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://redis://localhost:6379/2

# CORS Configuration
CORS_ORIGINS=https://lovable.ai,https://app.lovable.ai,http://localhost:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,docx,txt

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_MULTIPROC_DIR=/tmp

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-here
WEBHOOK_TIMEOUT=30

# Cache Configuration
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE=1000 